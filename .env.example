# Stripe Configuration - These are EXAMPLE placeholders, not real keys
# Copy this file to .env and replace with your actual Stripe keys
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Stripe Product/Price IDs (get these from your Stripe Dashboard)
STRIPE_PRO_PRICE_ID=price_your_pro_monthly_price_id
STRIPE_PREMIUM_PRICE_ID=price_your_premium_monthly_price_id

# Ad Configuration
EXPO_PUBLIC_ADMOB_APP_ID=ca-app-pub-your_app_id_here
EXPO_PUBLIC_ADMOB_BANNER_ID=ca-app-pub-your_app_id_here/banner_id
EXPO_PUBLIC_ADMOB_INTERSTITIAL_ID=ca-app-pub-your_app_id_here/interstitial_id
EXPO_PUBLIC_ADMOB_REWARDED_ID=ca-app-pub-your_app_id_here/rewarded_id
EXPO_PUBLIC_ADSENSE_PUBLISHER_ID=ca-pub-your_publisher_id_here
EXPO_PUBLIC_ADSENSE_SLOT_ID=your_adsense_slot_id

# Feature Flags
EXPO_PUBLIC_MONETIZATION_V1=true
EXPO_PUBLIC_SMART_INSIGHTS=true
EXPO_PUBLIC_BULK_UPLOAD=true
EXPO_PUBLIC_EMBED_FINANCE_BETA=true
EXPO_PUBLIC_SOCIAL_V1=true

# Virtual Cards (Weavr)
WEAVR_API_KEY=your_weavr_api_key_here
WEAVR_PROGRAMME_ID=your_weavr_programme_id_here

# Affiliate Networks
CJ_WEBSITE_ID=your_cj_website_id
CJ_AD_ID=your_cj_ad_id
SHAREASALE_AFFILIATE_ID=your_shareasale_affiliate_id
# Splitwise Integration
SPLITWISE_API_KEY=your_splitwise_api_key
SHAREASALE_MERCHANT_ID=your_shareasale_merchant_id
SHAREASALE_BANNER_ID=your_shareasale_banner_id
AFFILIATE_ID=subscription_manager

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=your_supabase_url
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Performance Monitoring
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# Compliance & Security
EXPO_PUBLIC_COMPLIANCE_CENTER=true
EXPO_PUBLIC_SECURITY_MONITORING=true
EXPO_PUBLIC_GDPR_TOOLS=true
EXPO_PUBLIC_AUDIT_LOGGING=true
HAVEIBEENPWNED_API_KEY=your_hibp_api_key_here

# Partner Marketplace
EXPO_PUBLIC_PARTNER_HUB=true

# Email Service (for GDPR notifications)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key_here